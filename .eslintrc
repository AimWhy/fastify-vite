{
  extends: [
    'standard',
    'plugin:react/recommended',
  ],
  plugins: [
    'react',
  ],
  rules: {
    'comma-dangle': ['error', 'always-multiline'],
    'react/react-in-jsx-scope': 'off',
    // FIXME
    'react/prop-types': 'off',
    // FIXME
    'react/no-children-prop': 'off',
  },
  parserOptions: {
    ecmaFeatures: {
      jsx: true,
    }
  },
  settings: {
    react: {
      version: '17.0',
    },
  },
}
