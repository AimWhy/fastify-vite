{
  parser: '@babel/eslint-parser',
  parserOptions: {
    requireConfigFile: false,
    ecmaVersion: 2021,
    sourceType: 'module',
    ecmaFeatures: {
      jsx: true,
    },    
  },
  extends: [
    'plugin:solid/recommended',
    'standard',
  ],
  plugins: [
    'solid',
  ],
  rules: {
    'comma-dangle': ['error', 'always-multiline'],
    'import/no-absolute-path': 'off',
  },
}
